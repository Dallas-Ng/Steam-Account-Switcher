<Window x:Class="SteamAccountSwitcher.AddAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamAccountSwitcher"
        mc:Ignorable="d"
        Title="Add an Account" 
        Height="250" 
        Width="250"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Closing="Window_Closing">

    <StackPanel Margin="5">

        <TextBlock Text="Name"/>
        <TextBox x:Name="tb_Name" Margin="0 5"/>
        
        <TextBlock Text="Username"/>
        <TextBox x:Name="tb_Username" Margin="0 5"/>

        <TextBlock Text="Password"/>
        <PasswordBox x:Name="tb_Password" Margin="0 5"/>

        <Button x:Name="btn_Add" Click="btn_Add_Click" Margin="0 10" Content="Add"/>

    </StackPanel>
</Window>
